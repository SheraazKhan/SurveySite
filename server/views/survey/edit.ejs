<%- include ../partials/surveyheader.ejs %>

<%- include ../partials/navbar.ejs %>

<!-- Content for the Add page -->
<div class="container d-block" style="padding-left: 25%; min-height: 0;">
    <div class="row">
        <div class="offset-md-1 col-md-6">
            <br>
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="name">Name of Survey</label>
                    <input type="text" class="form-control"
                    id="name"
                    placeholder="Enter name of survey"
                    name="name" 
                    value="<%= survey.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control"
                    id="description"
                    placeholder="Enter a description"
                    name="description" 
                    value="<%= survey.description %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="created">Created On:</label>
                    <input type="date" class="form-control"
                    id="created"
                    placeholder=""
                    name="created" 
                    value="<%= survey.created %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="expires">Expires On:</label>
                    <input type="date" class="form-control"
                    id="expires"
                    placeholder=""
                    name="expires" 
                    value="<%= survey.expires %>"
                    required>
                </div>

           <br>
        
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-pencil"></i> Update </button>
                
                    <a href="/survey-app" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>
<br>
<hr>

  

<%- include ../partials/footer.ejs %>  

